<!DOCTYPE html>
html(lang="en")
    head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0")
    link(rel="stylesheet", href="css/style.css")
    meta(name="theme-color", content="#FFE8E9")
    title Hudson Souza - visual, motion and front-end designer
body
    section.cover
        .intro
            img(src="img/h.svg", alt="H")
            div
                h1 Hello! 
                h1 My name's Hudson and I'm a designer.
                button Tell me more!
    section.work
        h2 This os some of the things I did
    div#bm
    script(type="text/javascript", src="bodymovin.js")
    script.
        var anim;
        var animData = {
            container: document.getElementById('bm'),
            renderer: 'svg',
            loop: true,
            autoplay: true,
            autoloadSegments: true,
            rendererSettings: {
                progressiveLoad:false
            },
            path: 'data.json'
        };
        anim = bodymovin.loadAnimation(animData);